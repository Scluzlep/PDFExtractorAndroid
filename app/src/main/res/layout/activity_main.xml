<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐方式 (安全、无需权限)"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_select_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从文件选择器中选取 PDF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="高级方式 (需要所有文件访问权限)"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_text_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="在此输入或粘贴 PDF 文件完整路径"
        android:inputType="textUri" />

    <Button
        android:id="@+id/button_start_from_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从路径开始提取" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="处理日志:"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_export_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导出日志" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/log_background"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/text_view_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="请选择一个 PDF 文件开始操作..."
            android:typeface="monospace"
            android:textColor="@color/log_text" />
    </ScrollView>

</LinearLayout>